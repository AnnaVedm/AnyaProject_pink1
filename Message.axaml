			<GradientStop Color="#f7004d" Offset="0.8"/>
		</LinearGradientBrush>
	</Window.Background>
		<Border CornerRadius="20">
			<Grid>
			<TextBlock Name="oshibka1"
					   Text=""
					   TextWrapping="Wrap"
					   HorizontalAlignment="Center"
					   FontFamily="Oswald"
